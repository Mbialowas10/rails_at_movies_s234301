<h1><%= movie.title %></h1>
<article class="message is-dark">
  <div class="message-header">
    <p>Description</p>
  </div>
  <div class="message-body">
    <%= movie.description %>
  </div>
</article>


<progress class="progress is-info" value="<%= movie.average_vote %>" max=10>
  <%= movie.average_vote%>
</progress>

<p>
 <strong>Rating: </strong>
 <%= movie.description %>
</p>

<p>
  <strong>Release Year: </strong>
 <%= movie.year %>
</p>

<p>
  <strong>Duration: </strong>
 <%= movie.duration %>
</p>


<p>
  <strong>Production Company: </strong>
 <%= link_to movie.production_company.name, movie.production_company %>
</p>

<h1>Awesome!</h1>
