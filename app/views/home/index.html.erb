<h1>Home#index</h1>

<div class="columns">
  <div class="column">
    <h2 clas="title is-2">Top 10 Movies</h2>
    <ol class="ml-5">
      <% @movies.each do |movie| %>
      <li>
        <%= link_to movie.title, movie %>
        <em>(<%= movie.production_company.name %>)</em>
      </li>
      <% end %>
    </ol>
    <p class="mt-5">
      <strong><%= link_to 'see the top 100 movies', movies_path%></strong>
    </p>
  </div>
  <div class="column">
    <h2 class="titel is-2">Top 10 Production Companies</h2>
    <ol>
      <% @production_companies.each do | production_company | %>
          <li>
            <%= link_to production_company.name, production_company%>
            <em>(<%= pluralize production_company.movie_count, "Top Movie" %></em>
          </li>
      <% end %>
    </ol>
    <p class="mt-5">
      <strong><%= link_to 'see the Top Production Companies', production_companies_path%></strong>
    </p>
  </div>
</div>
